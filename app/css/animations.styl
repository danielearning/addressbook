/** Animations CSS
 * Bring Stylus here
 * */

transition() {
  -webkit-transition: arguments;
  -moz-transition: arguments;
  -o-transition: arguments;
  transition: arguments;
}

.entryrow.ng-enter,
.entryrow.ng-leave,
.entryrow.ng-move {
  transition: 0.5s all;
}


.entryrow.ng-enter,
.entryrow.ng-move {
  opacity: 0;
  height: 0;
  overflow: hidden;
}

.listview .entryrow.ng-move.ng-move-active,
.listview .entryrow.ng-enter.ng-enter-active {
  opacity: 1;
  height: 3em;
}

.tableview .entryrow.ng-move.ng-move-active,
.tableview .entryrow.ng-enter.ng-enter-active {
  opacity: 1;
  height: 1em;
}

.entryrow.ng-leave {
  opacity: 1;
  overflow: hidden;
}

.entryrow.ng-leave.ng-leave-active {
  opacity: 0;
  height: 0;
  padding-top: 0;
  padding-bottom: 0;
}
